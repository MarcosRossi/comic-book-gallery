@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    //Layout = null;
    ViewBag.Title = "Comic Book Details";
}

<h1>@ViewBag.Title</h1>
@*<h2>@ViewBag.Description</h2>*@

<h5>Description:</h5>
<div>@Html.Raw(ViewBag.Description)</div>

@if (ViewBag.Artists.Length > 0)
{
    <h5>Artists:</h5>
    <div>
        <ul>

            @foreach (var artist in @ViewBag.Artists)
            {
                <li>@artist</li>
            }
        </ul>

    </div>
}


